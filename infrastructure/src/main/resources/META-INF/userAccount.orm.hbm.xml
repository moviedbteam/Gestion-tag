<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm
                                     http://xmlns.jcp.org/xml/ns/persistence/orm_2_2.xsd"
                 version="2.2">
    <entity class="com.bcefit.projet.domain.user.UserAccountEntity" >
        <attributes>
            <id name="idUser">
                <column name="id_user"/>
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="userName">
                <column name="user_name"/>
            </basic>
            <basic name="email">
                <column name="email"/>
            </basic>
            <basic name="birthYear">
                <column name="birth_year"/>
            </basic>
            <basic name="adultContent">
                <column name="adult_content"/>
            </basic>
            <basic name="enableAccount">
                <column name="enable_account"/>
            </basic>
            <many-to-many name="genreMovieList" fetch="LAZY" target-entity="com.bcefit.projet.domain.user.GenreMovieEntity">
                <join-table name="USER_GENRE_MOVIE">
                    <join-column name="id_user" referenced-column-name="USER_ACCOUNT"/>
                </join-table>
                <map-key>
            </many-to-many>
            <many-to-many name="genreTvList" fetch="LAZY" target-entity="com.bcefit.projet.domain.user.GenreTvEntity">
                <join-table name="USER_GENRE_TV">
                    <join-column name="id_user" referenced-column-name="USER_ACCOUNT"/>
                </join-table>
            </many-to-many>
            <many-to-many name="streamingSubscriptionList" fetch="LAZY" target-entity="com.bcefit.projet.domain.user.StreamingSubscriptionEntity">
                <join-table name="USER_STREAMING_SUBSCRIPTION">
                    <join-column name="id_user" referenced-column-name="USER_ACCOUNT"/>
                </join-table>
            </many-to-many>
        </attributes>
    </entity>
</entity-mappings>